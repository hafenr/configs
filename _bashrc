# === setup ===
UNAME_OUT="$(uname -s)"
case "${UNAME_OUT}" in
    Linux*)     OS=Linux;;
    Darwin*)    OS=Mac;;
    CYGWIN*)    OS=Cygwin;;
    MINGW*)     OS=MinGw;;
    *)          OS="UNKNOWN:${UNAME_OUT}"
esac

# Remap CapsLock to be both ESC and CTRL (install xcape first!)
if [ "$OS" = "Linux" ]; then
    setxkbmap -option ctrl:nocaps
    xcape -e 'Control_L=Escape'
fi

