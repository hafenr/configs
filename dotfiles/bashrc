# Latex
alias latexmk_='latexmk -pdf -pvc'
function pdflatex-watch() { while true; do inotifywait -e modify "$1"; pdflatex "$1"; done;}

export EDITOR=vim
export WORKON_HOME=~/.virtualenvs

alias tmux="tmux -u"
stty -ixon

